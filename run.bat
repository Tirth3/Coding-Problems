@echo off


IF "%~2" == "compile" (
	echo ---------------------------------------------------------------------- %DATE%
	echo 					compiling		     %TIME%
	echo -----------------------------------------------------------------------------
	g++ -Wall %1% -o main
)

IF "%~2" == "run" ( 
	echo ---------------------------------------------------------------------- %DATE%
	echo 					Running			      %TIME%
	echo -----------------------------------------------------------------------------
	main.exe 
)

IF "%~2" == "compile+run" (

	echo ---------------------------------------------------------------------- %DATE%
	echo 					Compiling		       %TIME%
	echo -----------------------------------------------------------------------------
	g++ -Wall %1% -o main

	pause	

	echo -----------------------------------------------------------------------------
	echo 					Running
	echo -----------------------------------------------------------------------------
	main.exe 
)

IF "%~2" == "debug" (
	echo ---------------------------------------------------------------------- %DATE%
	echo 					Compiling		       %TIME%
	echo -----------------------------------------------------------------------------
	g++ -Wall %1% -o main

)

IF "%~3" == "clear" (
	pause
	cls
)

